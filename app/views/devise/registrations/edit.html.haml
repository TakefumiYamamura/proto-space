= form_for resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, role: "form", class: "container user-new" } do |f|
  .col-md-8.col-md-offset-2
    %header.row.user-nav.row
      .col-md-12
        %h2 Edit Profile
        .user-name_image.row
          .user-name.col-md-10
            = f.text_field :name, autofocus: true, placeholder: 'Username'
          .user-image.col-md-2#user-image-edit
            = f.file_field :avatar
            - if current_user.avatar?
              = image_tag current_user.avatar, class: "thumb"
            - else
              = image_tag "noimage.png", class: "thumb"
        = f.email_field :email, autofocus: true, placeholder: 'E-Mail', class: 'user-email'
      .col-md-12
        %h4 Member of
        .user-user-member.row
          .user-name.col-md-12
            = f.text_field :group, autofocus: true, placeholder: 'Member'
        %h4 Profile
        .user-user-profile.row
          .user-name.col-md-12
            = f.text_area :profile, placeholder: 'Profile', cols: 30, rows: 4
        %h4 Works
        .user-name_image.row
          .user-name.col-md-12
            = f.text_area :work, placeholder: 'Works', cols: 30, rows: 4
    .row.text-center.user-btn
      = f.submit "Save", class: 'btn btn-lg btn-primary btn-block'
