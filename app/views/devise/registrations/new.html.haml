= form_for(resource, html: { class: "container user-new" }, as: resource_name, url: registration_path(resource_name)) do |f|
  .col-md-8.col-md-offset-2
    %header.row.user-nav.row
      .col-md-12
        = devise_error_messages!
        %h2 Register
        .user-name_image.row
          .user-name.col-md-10
            = f.text_field :name, autofocus: true, placeholder: 'Username'
          .user-image.col-md-2#upload-avatar
            = f.file_field :avatar
        = f.email_field :email, autofocus: true, placeholder: 'E-Mail', class: 'user-email'
        = f.password_field :password, autofocus: "off", placeholder: 'Password', class: 'user-password'
      .col-md-12
        %h4 Member of
        .user-user-member.row
          .user-name.col-md-12
            = f.text_field :group, autofocus: true, placeholder: 'Member'
        %h4 Profile
        .user-user-profile.row
          .user-name.col-md-12
            = f.text_area :profile, placeholder: 'Profile', cols: 30, rows: 4
        %h4 Works
        .user-name_image.row
          .user-name.col-md-12
            = f.text_area :work, placeholder: 'Works', cols: 30, rows: 4
    .row.text-center.user-btn
      = f.submit "Save", class: 'btn btn-lg btn-primary btn-block'
