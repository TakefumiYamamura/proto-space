.media
  .media-left
    = link_to user_path comment.prototype.user do
      - if comment.user.avatar
        = image_tag comment.user.avatar, alt: "64x64", style: "width: 64px; height: 64px;", data: {src: "holder.js/64x64", holder: {rendered: "true"}}, class: "media-object"
      - else
        = image_tag "noimage.png"
  .media-body
    %h4#top-aligned-media.media-heading
      = comment.user.name
    %p
      = comment.text
